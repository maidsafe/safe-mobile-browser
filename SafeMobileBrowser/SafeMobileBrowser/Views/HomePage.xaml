<?xml version="1.0" encoding="utf-8" ?>
<t:MenuContainerPage x:Class="SafeMobileBrowser.Views.HomePage"
                     xmlns="http://xamarin.com/schemas/2014/forms"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:controls="clr-namespace:SafeMobileBrowser.Controls"
                     xmlns:t="clr-namespace:SlideOverKit;assembly=SlideOverKit"
                     BackgroundColor="#F1F1F1">
    <NavigationPage.TitleView>
        <StackLayout x:Name="stackLayout"
                     Padding="10,3,10,7"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Horizontal"
                     Spacing="15"
                     VerticalOptions="Start">

            <Frame x:Name="TabCountFrame"
                   Padding="0"
                   BackgroundColor="#515151"
                   CornerRadius="2"
                   HasShadow="False"
                   HeightRequest="25"
                   VerticalOptions="Center"
                   WidthRequest="25">
                <Frame Margin="2"
                       Padding="4,0,4,4"
                       BackgroundColor="White"
                       CornerRadius="2"
                       HasShadow="False">
                    <Label BackgroundColor="Transparent"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Text="5"
                           TextColor="Black"
                           VerticalOptions="Start" />
                </Frame>
            </Frame>

            <Frame Margin="2"
                   Padding="10,2"
                   BackgroundColor="#F1F1F1"
                   CornerRadius="10"
                   HasShadow="False"
                   HorizontalOptions="FillAndExpand">
                <Grid Padding="0,2"
                      ColumnSpacing="2"
                      HorizontalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label BackgroundColor="Transparent"
                           FontSize="14"
                           Text="safe://"
                           TextColor="DarkGreen"
                           VerticalOptions="Center" />

                    <controls:AddressBarEntry x:Name="searchBar"
                                              Grid.Column="1"
                                              Margin="0,0,0,5"
                                              FontSize="14"
                                              HeightRequest="30"
                                              HorizontalOptions="FillAndExpand"
                                              Placeholder="Enter url"
                                              PlaceholderColor="DarkGray"
                                              VerticalOptions="Center" />

                    <Image x:Name="searchBarButton"
                           Grid.Column="2"
                           HeightRequest="15"
                           HorizontalOptions="End"
                           Source="refresh" />
                </Grid>
            </Frame>

            <Image x:Name="SettingsButton"
                   HeightRequest="15"
                   Source="menu" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout />
    </ContentPage.Content>
</t:MenuContainerPage>