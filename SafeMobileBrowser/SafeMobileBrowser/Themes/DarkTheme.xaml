<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:themes="clr-namespace:SafeMobileBrowser.Themes"
                    x:Class="SafeMobileBrowser.Themes.DarkTheme">

    <ResourceDictionary.MergedDictionaries>
        <themes:ColorPalette />
    </ResourceDictionary.MergedDictionaries>

    <!-- Dark theme primary colors -->
    <Color x:Key="PrimaryColor">#333333</Color>
    <Color x:Key="PrimaryLightColor">#5c5c5c</Color>
    <Color x:Key="PrimaryDarkColor">#222222</Color>

    <Color x:Key="SecondaryColor">#1976d2</Color>
    <Color x:Key="SecondaryLightColor">#63a4ff</Color>
    <Color x:Key="SecondaryDarkColor">#004ba0</Color>

    <Color x:Key="PrimaryTextColor">#ffffff</Color>
    <Color x:Key="SecondaryTextColor">#ffffff</Color>

    <Color x:Key="ContentPageTitleBarColor">#aaaaaa</Color>
    <Color x:Key="ContentPageBackgoundColor">#121212</Color>
    <Color x:Key="ToolbarIconColor">#aaaaaa</Color>
    <Color x:Key="BottomNavbarBackgroundColor">#000000</Color>
    <Color x:Key="BottomNavbarIconColor">#ffffff</Color>
</ResourceDictionary>

